<div class="favorite">
  <% if favorited = current_user.favorited(post) %>
    Favorited
  <% else %>
    Want to favorite this?
    <%= link_to [post, Favorite.new], class: 'btn btn-primary', method: :post do %>
      <i class="glyphicon glyphicon-star"></i>&nbsp; Favorite
    <% end %>
  <% end %>
</div>
